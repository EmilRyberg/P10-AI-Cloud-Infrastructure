BootStrap: docker
From: nvcr.io/nvidia/pytorch:20.12-py3

%post
    export PATH=/opt/conda/bin:$PATH
    export TORCH_CUDA_ARCH_LIST="6.0 6.1 7.0+PTX"
    export TORCH_NVCC_FLAGS="-Xfatbin -compress-all"
    export CMAKE_PREFIX_PATH="$(dirname $(which conda))/../"
    export DEBIAN_FRONTEND=noninteractive
    apt-get update && apt-get install -y ffmpeg libsm6 libxext6 git ninja-build libglib2.0-0 libsm6 libxrender-dev libxext6 \
        && apt-get clean \
        && rm -rf /var/lib/apt/lists/*

    # Install MMCV
    pip install --no-cache-dir --upgrade pip wheel setuptools
    pip install --no-cache-dir mmcv-full==1.4.7 -f https://download.openmmlab.com/mmcv/dist/cu111/torch1.11.0/index.html

    # Install MMClassification
    conda clean --all
    git clone https://github.com/open-mmlab/mmclassification.git /mmclassification
    cd /mmclassification
    export FORCE_CUDA="1"
    #pip install --no-cache-dir -r requirements/build.txt
    pip install --no-cache-dir -e .

%environment
    export PATH=/opt/conda/bin:$PATH
    export TORCH_CUDA_ARCH_LIST="6.0 6.1 7.0+PTX"
    export TORCH_NVCC_FLAGS="-Xfatbin -compress-all"
    export CMAKE_PREFIX_PATH="$(dirname $(which conda))/../"
    export FORCE_CUDA="1"

